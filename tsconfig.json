{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2017",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "outDir": "build",
    "typeRoots": ["node_modules/@types", "./types"]
  },
  "include": ["src/**/*"],
  "exclude": ["**/@types.ts"]
}
