{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@jyosuushi/*": ["src/*"],
      "@data/*": ["data/*"],
      "@changelog": ["changelog/index.ts"]
    },
    "esModuleInterop": true,
    "jsx": "react",
    "module": "commonjs",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "outDir": "build",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "target": "ES2019",
    "typeRoots": ["./types"]
  },
  "include": ["data/**/*", "src/**/*", "scripts/**/*"],
  "exclude": ["**/@types.ts"]
}
