{
    "compilerOptions": {
        "baseUrl": "./",
        "paths": {
            "@server/*": [
                "src/server/*"
            ],
            "@shared/*": [
                "src/shared/*"
            ]
        },
        "esModuleInterop": true,
        "jsx": "react",
        "module": "commonjs",
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "outDir": "dist-server",
        "preserveConstEnums": true,
        "removeComments": true,
        "skipLibCheck": true,
        "sourceMap": false,
        "strictNullChecks": true,
        "target": "ES2017",
        "typeRoots": [
            "node_modules/@types",
            "./types"
        ],
        "plugins": [
            {
                "transform": "@zerollup/ts-transform-paths"
            }
        ]
    },
    "include": [
        "src/server/**/*",
        "src/shared/**/*"
    ],
    "exclude": [
        "**/@types.ts"
    ],
}