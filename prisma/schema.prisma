generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./server.sqlite"
}

model BugReport {
  id            Int      @default(autoincrement()) @id
  message       String
  browser       String
  os            String
  userAgent     String
  clientVersion String
  dateReported  DateTime @default(now())
}

model Suggestion {
  id            Int    @default(autoincrement()) @id
  message       String
  clientVersion String
  userAgent     String
}

model ActiveUserSession {
  id         String   @id
  userId     String
  expiration DateTime
  User       User     @relation(fields: [userId], references: [id])
}

model User {
  id                    String                  @id
  email                 String                  @unique
  encryptedPassword     String
  dateRegistered        DateTime
  dateLastLogin         DateTime?
  hasVerifiedEmail      Boolean                 @default(false)
  ActiveUserSession     ActiveUserSession[]
  EmailVerificationCode EmailVerificationCode[]
  UserPasswordResetCode UserPasswordResetCode[]
}

model EmailVerificationCode {
  code     String   @id
  userId   String
  dateSent DateTime
  User     User     @relation(fields: [userId], references: [id])
}

model UserPasswordResetCode {
  firstCode     String
  secondCode    String
  userId        String
  dateRequested DateTime
  User          User     @relation(fields: [userId], references: [id])

  @@id([firstCode, secondCode])
}
