generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model BugReport {
  id            Int      @id @default(autoincrement())
  message       String
  browser       String
  os            String
  userAgent     String
  clientVersion String
  dateReported  DateTime @default(now())
}

model Suggestion {
  id            Int    @id @default(autoincrement())
  message       String
  clientVersion String
  userAgent     String
}

model ActiveUserSession {
  id         String   @id
  userId     String
  expiration DateTime
  User       User     @relation(fields: [userId], references: [id])

  @@index([userId], name: "userId")
}

model EmailVerificationCode {
  code     String   @id
  userId   String
  dateSent DateTime
  User     User     @relation(fields: [userId], references: [id])

  @@index([userId], name: "userId")
}

model UserPasswordResetCode {
  firstCode     String
  secondCode    String
  userId        String
  dateRequested DateTime
  User          User     @relation(fields: [userId], references: [id])

  @@id([firstCode, secondCode])
  @@index([userId], name: "userId")
}

model User {
  id                      String                  @id
  email                   String                  @unique
  encryptedPassword       String
  dateRegistered          DateTime
  dateLastLogin           DateTime?
  hasVerifiedEmail        Boolean                 @default(false)
  datePasswordLastChanged DateTime
  ActiveUserSession       ActiveUserSession[]
  EmailVerificationCode   EmailVerificationCode[]
  UserPasswordResetCode   UserPasswordResetCode[]
}
